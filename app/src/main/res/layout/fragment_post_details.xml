<layout xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        <variable
            name="post"
            type="net.webdefine.gazautoclub.Post" />
    </data>
    
    <ScrollView xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                tools:ignore="RtlHardcoded">
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
            
            <TextView
                    android:id="@+id/post_name"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="@dimen/post_name_margin_top"
                    android:text="@{post.name}" />
            
            <ImageView
                    android:id="@+id/post_image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/post_image_size"
                    android:layout_marginBottom="@dimen/post_image_margin_vertical"
                    android:layout_marginTop="@dimen/post_image_margin_vertical"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    imageResource="@{post.imageResId}" />
            
            <TextView
                    android:id="@+id/post_description"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/post_description_margin_bottom"
                    android:layout_marginLeft="@dimen/post_description_margin_left"
                    android:layout_marginRight="@dimen/post_description_margin_right"
                    android:layout_marginTop="0dp"
                    android:autoLink="web"
                    android:text="@{post.text}" />
        </LinearLayout>
    </ScrollView>
</layout>