<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/post_wrap_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
	
	<android.support.v7.widget.CardView
			android:id="@+id/post"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			card_view:cardElevation="4dp"
			card_view:cardCornerRadius="0dp"
			card_view:cardBackgroundColor="@color/cardview_light_background">
		
		<RelativeLayout
				android:id="@+id/post_layout"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:clickable="true"
				android:focusable="true">
			
			<ImageView
					android:id="@+id/post_cover"
					android:layout_width="wrap_content"
					android:layout_height="160dp"
					card_view:srcCompat="@drawable/ic_launcher_background"
					android:layout_alignParentTop="false"
					android:layout_alignParentStart="true"
					android:layout_alignParentEnd="true"
					android:contentDescription="@string/post_main_image" />
			<TextView
					android:id="@+id/post_context"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginStart="20dp"
					android:layout_marginEnd="10dp"
					android:lineSpacingExtra="4sp" android:layout_below="@+id/post_cover"
					android:layout_marginBottom="20dp" />
			
			<RelativeLayout
					android:id="@+id/post_signer_block"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:focusable="true"
					android:visibility="visible" android:layout_below="@+id/post_context">
				
				<ImageView
						android:id="@+id/post_signer_icon"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="20dp"
						android:layout_marginBottom="10dp"
						android:layout_marginTop="10dp"
						android:contentDescription="@string/author_icon" />
				
				<TextView
						android:id="@+id/post_signer_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_toEndOf="@+id/post_signer_icon"
						android:layout_marginStart="10dp"
						android:textStyle="normal|bold" />
			</RelativeLayout>
		</RelativeLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>