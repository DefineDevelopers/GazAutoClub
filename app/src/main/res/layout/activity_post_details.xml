<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activity.RepositoryDetailActivity">
    
    <data>
        <variable
                name="post"
                type="net.webdefine.gazautoclub.model.Post" />
    </data>
    
    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@color/colorLight">
        
        <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/colorText"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:fitsSystemWindows="true">
            
            <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:contentScrim="@color/colorPrimary"
                    app:statusBarScrim="@android:color/transparent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">
                
                <ImageView
                        android:id="@+id/post_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:paddingBottom="80dp"
                        android:paddingTop="64dp"
                        android:scaleType="fitCenter"
                        app:layout_collapseMode="parallax"
                        android:focusableInTouchMode="true"
                        android:contentDescription="TODO" />
                
                <android.support.v7.widget.Toolbar
                        android:id="@+id/post_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
        
        <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="8dp"
                        app:cardUseCompatPadding="true">
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/post_content_layout" android:background="@color/cardview_light_background">
                        <TextView
                                android:id="@+id/post_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/post_meta"
                                android:textColor="@color/colorText" android:background="@color/colorPrimary"
                                android:textAlignment="center" android:padding="16dp" />
            
                        <TextView
                                android:id="@+id/post_meta"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/post_title"
                                app:layout_constraintBottom_toTopOf="@+id/post_full_text"
                                android:textColor="@color/colorTextSecondary"
                                android:background="@color/colorLight"
                                android:text="16 hours ago by Andreas R."
                                android:textSize="14sp"
                                android:paddingStart="16dp" android:paddingEnd="16dp" android:paddingBottom="8dp"
                                android:paddingTop="8dp" />
                        <TextView
                                android:id="@+id/post_full_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:autoLink="web"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/post_meta"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="16sp" android:paddingEnd="16dp" android:paddingStart="16dp"
                                android:paddingBottom="8dp" android:paddingTop="8dp" />
        
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>
                <TextView
                        android:text="Comments: 3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/textView"
                        android:layout_weight="1"
                        android:textColor="@color/colorTextSecondary"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginBottom="16dp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/post_comments_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="48dp"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        
        <!--TODO-->
        <ProgressBar
                android:id="@+id/repositoryDetailProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                app:layout_anchor="@id/app_bar_layout"
                app:layout_anchorGravity="bottom" />
    
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/repositoryDetailFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:rippleColor="@color/colorPrimaryDark"
                android:clickable="true"
                app:srcCompat="@drawable/ic_favorite_blue_24dp"
                app:layout_anchor="@id/app_bar_layout"
                app:layout_anchorGravity="bottom|right|end"
                android:focusable="true" />
    
    
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" android:id="@+id/send_message_layout">
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/note_leave_comment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="beforeDescendants"
                    android:background="@drawable/bg_send_message_focused"
                    android:focusableInTouchMode="true">
                <EditText
                        android:id="@+id/note_view_your_message_text"
                        android:layout_width="0dp"
                        android:inputType="textMultiLine"
                        android:hint="Your message"
                        android:textColorHint="@color/colorTextSecondary"
                        android:textSize="18sp"
                        android:background="@drawable/bg_send_message"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/note_view_send_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_height="46dp" />
                <RelativeLayout
                        android:id="@+id/note_view_send_icon"
                        android:orientation="horizontal"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:foreground="@drawable/selectable_effect"
                        app:layout_constraintStart_toEndOf="@+id/note_view_your_message_text"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="Send message"
                            app:srcCompat="@drawable/ic_send_blue_24dp" />
                </RelativeLayout>
            </android.support.constraint.ConstraintLayout>
        </FrameLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>