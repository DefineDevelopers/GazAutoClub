<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activity.RepositoryDetailActivity">
    
    <data>
        <variable
                name="post"
                type="net.webdefine.gazautoclub.model.Post" />
    </data>
    
    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLight">
        <android.support.v7.widget.Toolbar
                android:id="@+id/post_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="6dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/AppTheme.AppBarOverlay">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/post_details_likes_count"
                        android:textSize="18sp"
                        android:textColor="@color/colorText"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" />
                <TextView
                        android:text="Запись"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/post_details_note_toolbar"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>
    
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/post_content_layout"
                            android:background="@color/cardview_light_background">
                        <TextView
                                android:id="@+id/post_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/post_meta_layout"
                                android:textColor="@color/colorText"
                                android:background="@color/colorPrimary"
                                android:textAlignment="center"
                                android:padding="16dp" />
                        <android.support.constraint.ConstraintLayout
                                android:id="@+id/post_meta_layout"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@color/colorText"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/post_title">
                            <ImageView
                                    android:id="@+id/post_time_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_access_time_gray_24dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/post_meta"
                                    android:layout_marginStart="16dp"
                                    android:contentDescription="@string/post_time_icon"
                                    app:layout_constraintHorizontal_chainStyle="spread_inside" />
                            <TextView
                                    android:id="@+id/post_meta"
                                    style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:background="@color/colorText"
                                    android:textColor="@color/colorTextSecondary"
                                    android:minHeight="@dimen/recycler_item_footer_height_min"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/post_time_icon"
                                    android:layout_marginStart="8dp"
                                    android:gravity="center_vertical" />
                        </android.support.constraint.ConstraintLayout>
                        <RelativeLayout
                                android:id="@+id/post_image_container"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/post_meta_layout">
                            <ImageView
                                    android:id="@+id/post_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitCenter"
                                    android:contentDescription="@string/post_image"
                                    android:adjustViewBounds="true" />
                        </RelativeLayout>
                        <TextView
                                android:id="@+id/post_full_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/post_image_container"
                                android:paddingEnd="16dp"
                                android:paddingStart="16dp"
                                android:paddingTop="8dp" />
                        <android.support.constraint.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/post_full_text"
                                app:layout_constraintBottom_toBottomOf="parent">
                            <ImageView
                                    android:id="@+id/post_details_car_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_directions_car_gray_24dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/post_car_info"
                                    android:layout_marginStart="16dp"
                                    android:contentDescription="TODO" />
                            <TextView
                                    android:id="@+id/post_details_car_info"
                                    style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:background="@color/colorText"
                                    android:textColor="@color/colorTextSecondary"
                                    android:minHeight="@dimen/recycler_item_footer_height_min"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/post_details_car_icon"
                                    android:layout_marginStart="8dp"
                                    android:gravity="center_vertical" />
                        </android.support.constraint.ConstraintLayout>
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>
                <TextView
                        android:id="@+id/comments_count_text_box"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorTextSecondary"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:layout_marginTop="16dp" />
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/post_comments_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginBottom="48dp" />
            </LinearLayout>
        </ScrollView>
        <FrameLayout
                android:id="@+id/send_message_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/note_leave_comment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="beforeDescendants"
                    android:background="@drawable/bg_send_message_focused"
                    android:focusableInTouchMode="true">
                <EditText
                        android:id="@+id/note_view_your_message_text"
                        android:layout_width="0dp"
                        android:inputType="textMultiLine"
                        android:hint="@string/your_message"
                        android:textColorHint="@color/colorTextSecondary"
                        android:textSize="18sp"
                        android:background="@drawable/bg_send_message"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/note_view_send_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_height="46dp" />
                <android.support.v7.widget.CardView
                        android:id="@+id/note_view_send_icon"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="@drawable/selectable_effect"
                        app:layout_constraintStart_toEndOf="@+id/note_view_your_message_text"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:alwaysDrawnWithCache="true">
                    <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/cardview_light_background">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/send_message"
                                app:srcCompat="@drawable/ic_send_blue_24dp"
                                android:layout_centerHorizontal="true"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </android.support.constraint.ConstraintLayout>
        </FrameLayout>
    
    </android.support.design.widget.CoordinatorLayout>
</layout>